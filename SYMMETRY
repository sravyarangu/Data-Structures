//symmetry check
#include <stdio.h>
#include <string.h>

int main() {
    char s[20], a[20];
    int top = -1, j = 0, l, m, d1;

    printf("Enter a string: ");
    scanf("%s", s);

    l = strlen(s);
    printf("%d is length\n", l);

    if (l % 2 == 0) {
        m = (l / 2) - 1;

        
        }
     else {
        m = ((l + 1) / 2) - 1;
        d1 = m;}

        for (int i = m + 1; i < l; i++) {
            top++;
            a[top] = s[i];
            printf("%d is top\n", top);
        }

if (l % 2 != 0) {
            m--;
}
    while (top != -1) {
        char ch = a[top];
        top--;



        if (ch == s[m]) {
            j++;
            printf("%d is j\n", j);
            m--;
        }
    }

    if (l % 2 == 0) {
        if (j == l / 2) {
            printf("\nSymmetric\n");
        } else {
            printf("\nNot symmetric\n");
        }
    } else {
        if (j == d1) {
            printf("\nSymmetric\n");
        } else {
            printf("\nNot symmetric\n");
        }
    }

    return 0;
}